@model SystemOnboardingowy.Models.Odejscie

@{
    ViewData["Title"] = "Szczegóły Odejścia";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        🛑 @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>👋 Procedura Odejścia: <span class="text-primary">@Model.Pracownik?.ImieNazwisko</span></h2>
            <span class="text-muted">Data odejścia: <strong>@Model.DataOdejscia.ToShortDateString()</strong></span>
            @if (Model.Status == SystemOnboardingowy.Models.StatusZgloszenia.Zakonczone)
            {
                <span class="badge bg-success ms-2">ZAKOŃCZONE</span>
            }
        </div>
        <div>
            @if (Model.Status != SystemOnboardingowy.Models.StatusZgloszenia.Zakonczone && Model.Status != SystemOnboardingowy.Models.StatusZgloszenia.Anulowane)
            {
                <form asp-action="Zakoncz" class="d-inline">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-success btn-lg" onclick="return confirm('Czy na pewno zakończyć procedurę? Pracownik zostanie zarchiwizowany.')">✅ Zakończ Procedurę</button>
                </form>

                @if (User.IsInRole("Kierownik"))
                {
                    <form asp-action="Anuluj" class="d-inline ms-2">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Anulować zgłoszenie?')">🗑 Anuluj</button>
                    </form>
                }
            }
        </div>
    </div>

    <div class="row">
        <div class="col-md-7 mb-4">
            <div class="card h-100 shadow border-secondary" style="background-color: #1e1e1e; color: #fff;">
                <div class="card-header bg-warning text-dark fw-bold">
                    📋 Lista Kontrolna (Do odebrania/zablokowania)
                </div>
                <div class="card-body p-0">
                    <table class="table table-dark table-hover mb-0 align-middle">
                        <thead>
                            <tr class="text-white-50">
                                <th>Dział</th>
                                <th>Zadanie</th>
                                <th>Status</th>
                                <th>Akcja</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var zadanie in Model.Zadania)
                            {
                                // --- LOGIKA UPRAWNIEŃ ---
                                bool czyMozeEdytowac = false;
                                if (User.IsInRole("Kierownik")) { czyMozeEdytowac = true; }
                                else if (zadanie.Dzial == SystemOnboardingowy.Models.Dzial.IT && User.IsInRole("IT")) { czyMozeEdytowac = true; }
                                else if (zadanie.Dzial == SystemOnboardingowy.Models.Dzial.HR && User.IsInRole("HR")) { czyMozeEdytowac = true; }
                                else if (zadanie.Dzial == SystemOnboardingowy.Models.Dzial.Sprzet && User.IsInRole("Sprzet")) { czyMozeEdytowac = true; }
                                // ------------------------

                                <tr class="@(czyMozeEdytowac ? "" : "opacity-75")">
                                    <td>
                                        <span class="badge @(zadanie.Dzial == SystemOnboardingowy.Models.Dzial.IT ? "bg-info text-dark" : "bg-warning text-dark")">
                                            @zadanie.Dzial
                                        </span>
                                    </td>
                                    <td>@zadanie.Tresc</td>
                                    <td>
                                        @if (zadanie.CzyWykonane)
                                        {
                                            <span class="text-success fw-bold">✅ Zrobione</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger fw-bold">❌ Do zrobienia</span>
                                        }
                                    </td>
                                    <td>
                                        @if (Model.Status != SystemOnboardingowy.Models.StatusZgloszenia.Zakonczone)
                                        {
                                            @if (czyMozeEdytowac)
                                            {
                                                <form asp-action="WykonajZadanie" method="post">
                                                    <input type="hidden" name="zadanieId" value="@zadanie.Id" />
                                                    <button type="submit" class="btn btn-sm @(zadanie.CzyWykonane ? "btn-outline-secondary" : "btn-success")">
                                                        @(zadanie.CzyWykonane ? "Cofnij" : "Zatwierdź")
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <span class="text-muted small" title="Brak uprawnień do tego działu">🔒 Brak dostępu</span>
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                            @if (!Model.Zadania.Any())
                            {
                                <tr><td colspan="4" class="text-center text-muted p-4">Brak zadań wygenerowanych automatycznie.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-5 mb-4">
            <div class="card h-100 shadow border-secondary" style="background-color: #1e1e1e; color: #fff;">
                <div class="card-header bg-secondary text-white">
                    💬 Historia Zdarzeń
                </div>
                <div class="card-body" style="max-height: 500px; overflow-y: auto; background-color: #252525;">
                    @if (!Model.Notatki.Any())
                    {
                        <p class="text-muted text-center mt-3">Brak wpisów w historii.</p>
                    }
                    else
                    {
                        @foreach (var notatka in Model.Notatki)
                        {
                            <div class="card mb-2 border-0 shadow-sm" style="background-color: #2b2b2b;">
                                <div class="card-body p-2">
                                    <div class="d-flex justify-content-between">
                                        <strong class="text-info">@notatka.Autor</strong>
                                        <small class="text-white-50">@notatka.DataUtworzenia.ToString("g")</small>
                                    </div>
                                    <p class="mb-0 mt-1 text-white">@notatka.Tresc</p>
                                </div>
                            </div>
                        }
                    }
                </div>

                @if (Model.Status != SystemOnboardingowy.Models.StatusZgloszenia.Zakonczone)
                {
                    <div class="card-footer border-top border-secondary" style="background-color: #1e1e1e;">
                        <form asp-action="DodajNotatke">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <div class="input-group">
                                <input type="text" name="tresc" class="form-control" placeholder="Wpisz komentarz..." required />
                                <button class="btn btn-primary" type="submit">Wyślij</button>
                            </div>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">⬅ Powrót do listy</a>
    </div>
</div>
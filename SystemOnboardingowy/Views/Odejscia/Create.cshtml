@model SystemOnboardingowy.Models.Odejscie

@{
    ViewData["Title"] = "Zgłoś Odejście";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">🚪 Rozpocznij procedurę odejścia</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label class="control-label fw-bold">Pracownik</label>
                            <select asp-for="PracownikId" class="form-control" asp-items="ViewBag.PracownikId"></select>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DataOdejscia" class="control-label fw-bold">Data ostatniego dnia pracy</label>
                            <input asp-for="DataOdejscia" class="form-control" type="date" />
                            <span asp-validation-for="DataOdejscia" class="text-danger"></span>
                        </div>

                        <hr />

                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" asp-for="CzyPrzekierowacPoczte" id="emailCheck" />
                            <label class="form-check-label fw-bold" for="emailCheck">Czy przekierować pocztę email?</label>
                        </div>

                        <div class="form-group mb-3" id="emailDetails">
                            <label asp-for="AdresatPrzekierowania" class="control-label">Na jaki adres przekierować?</label>
                            <input asp-for="AdresatPrzekierowania" class="form-control" placeholder="np. przelozony@firma.pl" />
                            <span asp-validation-for="AdresatPrzekierowania" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="InstrukcjaDlaPlikow" class="control-label fw-bold">Instrukcja dot. plików (OneDrive/Dysk lokalny)</label>
                            <textarea asp-for="InstrukcjaDlaPlikow" class="form-control" rows="3" placeholder="Np. zarchiwizować folder Projekty, resztę usunąć."></textarea>
                            <span asp-validation-for="InstrukcjaDlaPlikow" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
                            <button type="submit" class="btn btn-danger">Zgłoś Odejście</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
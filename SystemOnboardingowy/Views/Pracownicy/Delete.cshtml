@model SystemOnboardingowy.Models.Pracownik
@{
    ViewData["Title"] = "Usuń";
}
<h2 class="text-danger">Usuwanie Pracownika</h2>
<div class="alert alert-warning">Czy na pewno chcesz usunąć: <strong>@Model.Imie @Model.Nazwisko</strong>?</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Tak, usuń</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>
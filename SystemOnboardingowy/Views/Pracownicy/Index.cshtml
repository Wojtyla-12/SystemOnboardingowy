@model IEnumerable<SystemOnboardingowy.Models.Pracownik>

@{
    ViewData["Title"] = "Pracownicy";
    bool pokazArchiwum = (bool?)ViewData["PokazArchiwum"] ?? false;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Lista Pracowników</h1>
    <a asp-action="Create" class="btn btn-primary">➕ Dodaj Pracownika</a>
</div>

<form asp-action="Index" method="get" class="mb-4">
    <div class="input-group mb-2">
        <input type="text" name="searchString" class="form-control" placeholder="Szukaj po nazwisku..." value="@ViewData["CurrentFilter"]" />
        <button type="submit" class="btn btn-outline-primary">🔍 Szukaj</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Resetuj</a>
    </div>

    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="pokazArchiwumCheck" name="pokazArchiwum" value="true" @(pokazArchiwum ? "checked" : "") onchange="this.form.submit()">
        <label class="form-check-label text-white" for="pokazArchiwumCheck">Pokaż zarchiwizowanych (byli pracownicy)</label>
        <input type="hidden" name="pokazArchiwum" value="false" />
    </div>
</form>

<div class="table-responsive shadow-sm rounded">
    <table class="table table-hover align-middle mb-0">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" class="text-white text-decoration-none">Nazwisko i Imię ↕</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["PosSortParm"]" class="text-white text-decoration-none">Stanowisko ↕</a>
                </th>
                <th>Email</th>
                <th class="text-end">Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@(item.CzyZarchiwizowany ? "opacity-50" : "")">
                    <td class="fw-bold">
                        @Html.DisplayFor(modelItem => item.Nazwisko) @Html.DisplayFor(modelItem => item.Imie)
                        @if (item.CzyZarchiwizowany)
                        {
                            <span class="badge bg-secondary ms-2">ARCHIWUM</span>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Stanowisko)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white me-1">ℹ Szczegóły</a>
                        @if (!item.CzyZarchiwizowany)
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edytuj</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
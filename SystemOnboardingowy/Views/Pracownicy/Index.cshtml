@model IEnumerable<SystemOnboardingowy.Models.Pracownik>

@{
    ViewData["Title"] = "Pracownicy";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Lista Pracowników</h1>
    <a asp-action="Create" class="btn btn-primary">➕ Dodaj Pracownika</a>
</div>

<form asp-action="Index" method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="Szukaj po nazwisku, imieniu lub stanowisku..." value="@ViewData["CurrentFilter"]" />
        <button type="submit" class="btn btn-outline-primary">🔍 Szukaj</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Resetuj</a>
    </div>
</form>

<table class="table">
    <thead>
        <tr><th>Imię i Nazwisko</th><th>Stanowisko</th><th>Email</th><th>Akcje</th></tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Imie @item.Nazwisko</td>
                <td>@item.Stanowisko</td>
                <td>@item.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edytuj</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
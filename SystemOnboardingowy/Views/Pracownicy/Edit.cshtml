@model SystemOnboardingowy.Models.Pracownik

@{
    ViewData["Title"] = "Edytuj pracownika";
}

<div class="container mt-4">
    <h2>✏ Edytuj pracownika</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="Imie" class="control-label fw-bold"></label>
                    <input asp-for="Imie" class="form-control" />
                    <span asp-validation-for="Imie" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Nazwisko" class="control-label fw-bold"></label>
                    <input asp-for="Nazwisko" class="form-control" />
                    <span asp-validation-for="Nazwisko" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Stanowisko" class="control-label fw-bold"></label>
                    <select asp-for="Stanowisko" class="form-select" asp-items="Html.GetEnumSelectList<SystemOnboardingowy.Models.StanowiskoWdrozeniowe>()"></select>
                    <span asp-validation-for="Stanowisko" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label fw-bold"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary px-4">Zapisz zmiany</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Anuluj</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@model IEnumerable<SystemOnboardingowy.Models.ZadanieWdrozeniowe>

@{
    ViewData["Title"] = "Moje Zadania";
}

<div class="container mt-4">
    <h2 class="mb-4">📋 Moje Zadania (Do zrobienia)</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-success">
            🎉 Brak zaległych zadań! Wszystko zrobione.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle mb-0 bg-gradient">
                <thead class="table-light">
                    <tr>
                        <th>Pracownik</th>
                        <th>Zadanie</th>
                        <th>Start Pracy</th>
                        <th>Akcja</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.Wdrozenie.Pracownik.ImieNazwisko</strong><br />
                                <small class="text-muted">@item.Wdrozenie.Stanowisko</small>
                            </td>
                            <td>
                                @item.Tresc
                            </td>
                            <td>
                                @if (item.Wdrozenie.DataRozpoczeciaPracy < DateTime.Now)
                                {
                                    <span class="badge bg-danger">Zaległe (@item.Wdrozenie.DataRozpoczeciaPracy.ToShortDateString())</span>
                                }
                                else
                                {
                                    <span class="badge bg-info text-dark">@item.Wdrozenie.DataRozpoczeciaPracy.ToShortDateString()</span>
                                }
                            </td>
                            <td>
                                <form asp-action="WykonajZadanie" method="post" class="d-inline">
                                    <input type="hidden" name="zadanieId" value="@item.Id" />
                                    <button type="submit" class="btn btn-success btn-sm">
                                        ✅ Oznacz jako wykonane
                                    </button>
                                </form>
                                <a asp-action="Details" asp-route-id="@item.WdrozenieId" class="btn btn-outline-primary btn-sm ms-1">
                                    Szczegóły
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
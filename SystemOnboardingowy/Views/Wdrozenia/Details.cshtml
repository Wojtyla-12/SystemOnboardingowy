@model SystemOnboardingowy.Models.Wdrozenie
@{
    ViewData["Title"] = "Szczegóły";
}

<div class="card bg-dark text-white border-primary mb-4">
    <div class="card-body d-flex justify-content-between align-items-center">
        <h3 class="mb-0">@Model.Pracownik?.Imie @Model.Pracownik?.Nazwisko</h3>
        <h4>
            Status:
            @if (Model.Status == SystemOnboardingowy.Models.StatusWdrozenia.Zakonczone)
            {
                <span class="badge bg-success">Zakończone</span>
            }
            else if (Model.Status == SystemOnboardingowy.Models.StatusWdrozenia.WToku)
            {

                <span class="badge bg-warning text-dark">W Toku</span>
            }
            else
            {

                <span class="badge bg-secondary">Nowe</span>
            }
        </h4>
    </div>
</div>

<table class="table table-hover align-middle">
    <thead class="table-dark">
        <tr><th>Dział</th><th>Zadanie</th><th>Komentarz</th><th>Status</th><th>Akcja</th></tr>
    </thead>
    <tbody>
        @foreach (var zadanie in Model.Zadania)
        {
            bool canEdit = false;
            if (User.IsInRole("Kierownik")) { canEdit = true; }
            if (User.IsInRole("IT") && zadanie.DzialOdpowiedzialny.ToString() == "IT") { canEdit = true; }
            if (User.IsInRole("HR") && zadanie.DzialOdpowiedzialny.ToString() == "HR") { canEdit = true; }
            if (User.IsInRole("Sprzet") && zadanie.DzialOdpowiedzialny.ToString() == "Sprzet") { canEdit = true; }

            <tr class="@(zadanie.CzyWykonane ? "backcard" : "")">
                <td><span class="badge bg-info text-dark">@zadanie.DzialOdpowiedzialny</span></td>
                <td>@zadanie.TrescZadania</td>
                <td>
                    @if (canEdit)
                    {
                        <form asp-action="ZapiszKomentarzZadania" method="post" class="d-flex">
                            <input type="hidden" name="id" value="@zadanie.Id" />
                            <div class="input-group input-group-sm">
                                <input type="text" name="komentarz" value="@zadanie.Komentarz" class="form-control" />
                                <button type="submit" class="btn btn-secondary">💾</button>
                            </div>
                        </form>
                    }
                    else
                    {

                        <span class="text-muted">@zadanie.Komentarz</span>
                    }
                </td>
                <td>@(zadanie.CzyWykonane ? "✅" : "🕒")</td>
                <td>
                    @if (canEdit)
                    {
                        <form asp-action="OznaczZadanie" method="post">
                            <input type="hidden" name="id" value="@zadanie.Id" />
                            <input type="hidden" name="komentarz" value="@zadanie.Komentarz" />
                            @if (!zadanie.CzyWykonane)
                            {
                                <button name="czyWykonane" value="true" class="btn btn-success btn-sm">Zatwierdź</button>
                            }
                            else
                            {

                                <button name="czyWykonane" value="false" class="btn btn-outline-danger btn-sm">Cofnij</button>
                            }
                        </form>
                    }
                    else
                    {

                        <span class="badge bg-secondary">Brak uprawnień</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (User.IsInRole("Kierownik"))
{
    <div class="card bg-dark border-secondary mb-3 mt-4">
        <div class="card-header border-secondary">
            ➕ Dodaj niestandardowe zadanie
        </div>
        <div class="card-body">
            <form asp-action="DodajZadanie" method="post" class="row g-3 align-items-center">
                <input type="hidden" name="wdrozenieId" value="@Model.Id" />
                <div class="col-md-6">
                    <input type="text" name="tresc" class="form-control" placeholder="Treść zadania (np. Zamówić wizytówki)" required />
                </div>
                <div class="col-md-3">
                    <select name="dzial" class="form-select" asp-items="Html.GetEnumSelectList<SystemOnboardingowy.Models.Dzial>()"></select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-success w-100">Dodaj do listy</button>
                </div>
            </form>
        </div>
    </div>
}

<a asp-action="Index" class="btn btn-secondary mt-3">Wróć</a>
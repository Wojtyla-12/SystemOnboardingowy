@model SystemOnboardingowy.Models.Wdrozenie

@{
    ViewData["Title"] = "Edycja";
}

<h2>Edytuj Wdrożenie</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DataUtworzenia" />
            <input type="hidden" asp-for="Status" />

            <div class="mb-3">
                <label class="control-label">Pracownik</label>
                <select asp-for="PracownikId" class="form-select" asp-items="ViewBag.PracownikId"></select>
            </div>

            <div class="mb-3">
                <label class="control-label">Data rozpoczęcia pracy</label>
                <input asp-for="DataRozpoczeciaPracy" type="date" class="form-control" />
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
                <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>